/** * Swell Class * @author	tPS * @version 1 **/import com.robertpenner.easing.Quad;import com.tPS.tween.Thread; class com.tPS.sound.Swell extends com.tPS.event.AeventSource{	private var i:Number;	private var snd:Sound;	private var duration:Number;	private var diffTo100:Number;	private var originVol:Number;		function Swell($snd:Sound,$duration:Number){		i=0;		snd = $snd;		duration = $duration;		diffTo100 = 100 - snd.getVolume(); 		originVol = snd.getVolume(); 		fade();	}		private function update(){				if(i<duration){						var vol:Number = Quad.easeOut(i,originVol,diffTo100,duration);			snd.setVolume(vol);			}else{			broadcastMessage("onFadeEnd");			Thread.endThread(this);		}		i++;	}		private function fade(){		Thread.beginThread(this);	}		public function kill():Void{		Thread.endThread(this);	}	}