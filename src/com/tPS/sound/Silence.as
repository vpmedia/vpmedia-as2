/** * Silence Class * @author	tPS * @version 1 **/import com.robertpenner.easing.Quad;import com.tPS.tween.Threat; class com.tPS.sound.Silence extends com.tPS.event.AeventSource{	private var i:Number;	private var snd:Sound;	private var duration:Number;	private var diffTo100:Number;	private var originVol:Number;		function Silence($snd:Sound,$duration:Number){		i=0;		snd = $snd;		duration = $duration;		diffTo100 = - snd.getVolume(); 		originVol = snd.getVolume(); 		fade();	}		private function update(){				if(i<duration){						var vol:Number = Quad.easeOut(i,originVol,diffTo100,duration);			snd.setVolume(vol);			}else{			broadcastMessage("onFadeEnd");			Threat.endThreat(this);		}		i++;	}		private function fade(){		Threat.beginThreat(this);	}		public function kill():Void{		Threat.endThreat(this);	}	}