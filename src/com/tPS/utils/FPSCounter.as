import com.tPS.tween.Thread;import com.tPS.event.Delegate;/** * COUNTS AND DISPLAYS * CURRENT FPS *  * @author tPS */ class com.tPS.utils.FPSCounter {	private var fps_mc:MovieClip;	private var counter:Number;		public function FPSCounter() {		setup();		init();	}		private function setup() : Void {		Thread.initialize();	}		private function init() : Void {		counter = 0;				if(!_root.fps_mc){			fps_mc = _root.createEmptyMovieClip("fps_mc",_root.getNextHighestDepth());			var txt:TextField = fps_mc.createTextField("$fps", 1, 0, 0, 30,20);			txt.autoSize = "left";		}else{			fps_mc = _root.fps_mc;		}				Thread.beginThread(this);		setInterval(Delegate.create(this, show), 1000);	}		private function update() : Void {		counter ++;	}		private function show() : Void {		fps_mc.$fps.text = counter + "/FPS";		counter = 0;	}}