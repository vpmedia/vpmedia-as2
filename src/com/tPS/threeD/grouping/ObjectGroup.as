/** * 3D ranslation Class * @author tPS * @version 1 **/import com.lo9ic.Quaternion;import com.tPS.threeD.grouping.GroupingUtils;class com.tPS.threeD.grouping.ObjectGroup {	//props	private var members:Array;	private var center:Quaternion;	function ObjectGroup(){		members = [];	}		function addMember($member:Object):Void{		if(isNotInGroup($member,members)){			members.push($member);		}		center = GroupingUtils.getGroupCenter(this,true,true,true);	}		function removeMember($member:Object):Void{		var toDel:Number = getMemberIndex($member,members);		members.splice(toDel,1);		delete toDel;		center = GroupingUtils.getGroupCenter(this,true,true,true);	}		static private function isNotInGroup($member:Object,$array:Array):Boolean{		var i:Number = $array.length;		var ret:Boolean = true;		while(--i >-1){			if($member == $array[i]){				ret = false;				break;			}		}		return ret;	}		static private function getMemberIndex($member:Object,$array:Array):Number{		var i:Number = $array.length;		while(--i > -1){			if($array[i] == $member){				return i;				break;			}		}	}		public function get _members():Array{		return members;	}		public function get _center():Quaternion{		return center;	}}