/** * Trigonometry * @author tPS * @version 1 **/import com.tPS.draw.Point;class com.tPS.trigonometry.Trigonometry{		static function rotation2Points(base:Point,trgt:Point):Number{		var dx = trgt.x - base.x;   		var dy = trgt.y - base.y;  		var radians = Math.atan2(dy, dx);   		return radians * 180 / Math.PI;	}		static function rotationAndLength2Points(base:Point,trgt:Point):Object{		var vector:Object = {};		var dx = trgt.x - base.x;   		var dy = trgt.y - base.y;  		var radians = Math.atan2(dy, dx);		vector.rotation = radians * 180 / Math.PI;		vector.length = Math.sqrt(dx*dx + dy*dy);   		return vector;	}	}