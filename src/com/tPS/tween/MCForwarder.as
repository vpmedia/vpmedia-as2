/** *  * @author tPS * @version 1 **/import mx.utils.Delegate;import com.tPS.tween.Threat;class com.tPS.tween.MCForwarder extends com.tPS.event.AeventSource{		private var trgt:MovieClip;	private var timer:Number	private var klick:Number;	private var frame:Number;	private var input:Object;	function MCForwarder($obj:MovieClip,$input:Object){		trgt = $obj;		timer = 1;		klick = 0;		frame = 1;		input = $input;		input.addListener(this);	}		private function begin(){		trgt.onEnterFrame = Delegate.create(this,update);	}		public function start(){		begin();	}		private function update():Void{		if(trgt._currentframe+frame < trgt._totalframes){			trgt.gotoAndStop(trgt._currentframe+frame);		}else{			trgt.play();		}		timer++;				if (timer == 10) {			timer = 1;			if (klick == 0) {				// Wenn kein Klick, normal				//trgt.play();			} else {				if (trgt._currentframe<70) {					// Dynamisches Vorspulen					klick>3 ? klick = 3:null;					frame = klick;				} else {					// Ab Loop noch noch 1 Frame vorwärts					frame = 1;				}			}			klick = 0;		}			}		private function onSoundUpdate($level:Number):Void{		klick += Math.round($level/(100/3));	}		public function kill(){		input.removeListener(this);		delete trgt.onEnterFrame;		trgt.stopAllTweens();	}	}