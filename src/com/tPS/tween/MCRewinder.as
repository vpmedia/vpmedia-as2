/** *  * @author tPS * @version 1 **/import mx.utils.Delegate;class com.tPS.tween.MCRewinder extends com.tPS.event.AeventSource{		private var trgt:MovieClip;	private var duration:Number;	private var endFrame:Number;	private var steps:Number;	function MCRewinder($obj:MovieClip,$toFrame:Number){		trgt = $obj;			//duration = $duration;		endFrame = $toFrame;		//steps = Number(trgt._currentframe-endFrame)/duration;		steps = 3;	}		private function begin(){		trgt.onEnterFrame = Delegate.create(this,update);	}		public function start(){		begin();	}		private function update(){				if(trgt._currentframe > endFrame){			var nF:Number = Math.floor(trgt._currentframe-steps);			if(nF < endFrame){				nF = endFrame;			}			trgt.gotoAndStop(nF);		}else{					broadcastMessage("onTranslationEnd",this);			kill();		}	}		public function kill(){		trgt.onEnterFrame = undefined;	}}