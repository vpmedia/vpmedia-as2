/** *  * @author	tPS * @version 1 **/ import com.tPS.draw.DragShapeRounded; import com.tPS.draw.Point; class com.tPS.masking.DragShapeMasker{ 	private var maskcontent:MovieClip;	private var dragshape_mc:MovieClip;	private var dragShape:DragShapeRounded;			function DragShapeMasker($maskcontent:MovieClip,$points:Array){		maskcontent = $maskcontent;		dragshape_mc = $maskcontent._parent._parent.createEmptyMovieClip("shapeMask",$maskcontent._parent._parent.getNextHighestDepth());		trace($maskcontent._parent);		dragshape_mc._x = $maskcontent._parent._x;		dragshape_mc._y = $maskcontent._parent._y;		dragShape = new DragShapeRounded(dragshape_mc,$points);		maskcontent.setMask(dragShape._shape);	}			function set enable($isActive:Boolean){		dragShape.enable($isActive);	}}