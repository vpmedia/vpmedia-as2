/** * Abstract Form Class * @author tPS * @version 1 **/import com.tPS.ui.form.*;class GenericRadioGroup implements IFormField{	//props	private var radioButtons:Array;	private var selectedItem:Number;	private var selectedIndex:Number;	//constructor	function GenericRadioGroup(){		radioButtons = [];		selectedIndex = 0;		//selectedItem = null;	}	public function registerRadioButton($rb:GenericRadioButton):Number{		radioButtons.push($rb);		return radioButtons.length-1;	}	private function updateGroup(){				for(var i=0; i<radioButtons.length; i++){			radioButtons[i].mark(false);			if(i!=selectedIndex){				radioButtons[i]._isSelected = false;			}else{				radioButtons[i]._isSelected = true;				selectedItem = i;			}		}	}	public function set _selectedIndex($ind:Number){		selectedIndex = $ind;		updateGroup();	}		public function setValue($val:String){				var selectedInd:Number = 0;		for(var i=0; i<radioButtons.length; i++){			var comp:Array =  radioButtons[i]._dataHolder;						if(comp[1] == $val){				selectedInd = i;				break;			}		}		selectedIndex = selectedInd;				updateGroup();	}	public function getValue():Object{		return radioButtons[selectedIndex].getValue();	}	public function validate():Boolean{		return (selectedItem!=undefined)?true:false;	}		public function toString():String{		return "Generic Radio Group";	}}