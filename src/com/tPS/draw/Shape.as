/** * COKE ZERO Ngon * @author	tPS * @version 1 **/import com.tPS.draw.Point; class com.tPS.draw.Shape{ 	private var _rt:MovieClip;	private var points:Array;	private var fillStyle:Object;	private var lineStyle:Object;		function Shape($rt:MovieClip,$points:Array,$fs:Object,$ls:Object){		_rt = $rt;		_rt.clear();				points = ($points != undefined) ? $points :  [new Point(-5,-5),new Point(5,-5),new Point(5,5),new Point(-5,5)];		fillStyle = ($fs != undefined) ? $fs : {type:"color",col:0xFFFFFF, alpha:0};		lineStyle = ($ls != undefined) ? $ls : {thickness:1, rgb:0xFFFFFF, alpha:0, pixelHinting:true, noScale:"none", capsStyle:"none", jointStyle:"miter", miterLimit:4};				render();	}		private function render():Void{		_rt.clear();		_rt.beginFill(fillStyle.col,fillStyle.alpha);		_rt.moveTo(points[0].x,points[0].y);		_rt.lineStyle(lineStyle.thickness,lineStyle.rgb,lineStyle.alpha,lineStyle.pixelHinting,lineStyle.noScale,lineStyle.capsStyle,lineStyle.jointStyle,lineStyle.miterLimit);		var i:Number = 0;		while(++i<points.length){			_rt.lineTo(points[i].x,points[i].y);					}		_rt.endFill();			}		function set _points($points:Array):Void{		points = $points;		render();	}		function get _points():Array{		return points;	}		function get _clip():MovieClip{		return _rt;	}			function toString():Void{		var pntStr:String = "";		var i:Number = -1;		while(++i<points.length){			 pntStr += "new Point(" + points[i].x + ", " + points[i].y + "), ";					}		trace("Shape: " + pntStr);	}}