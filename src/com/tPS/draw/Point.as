/** * Point * @author	tPS * @version 1 **/class com.tPS.draw.Point{	public var x:Number;	public var y:Number;	function Point($x:Number,$y:Number){		x = ($x!= undefined) ? $x : 0;		y = ($y!= undefined) ? $y : 0;	}	public function fromArray($points:Array):Void{		x = $points[0];		y = $points[1];	}	public function fromNumbers($x:Number,$y:Number):Void{		x = ($x!= undefined) ? $x : 0;		y = ($y!= undefined) ? $y : 0;	}	public function get _x():Number{		return x;	}	public function get _y():Number{		return y;	}	public function toString():Void{		trace("Point: _x: " + x + ", _y: " + y);	}}