/** * COKE ZERO Ngon * @author	tPS * @version 1 **/ import com.tPS.draw.Point;class com.tPS.draw.ShapeRounded extends com.tPS.draw.Shape{	function ShapeRounded($rt:MovieClip,$points:Array,$fs:Object,$ls:Object){		super($rt,$points,$fs,$ls);	}	private function render():Void{		_rt.clear();		_rt.beginFill(fillStyle.col,fillStyle.alpha);		_rt.lineStyle(lineStyle.thickness,lineStyle.rgb,lineStyle.alpha,lineStyle.pixelHinting,lineStyle.noScale,lineStyle.capsStyle,lineStyle.jointStyle,lineStyle.miterLimit);		var xc1:Number = (points[0].x + points[points.length - 1].x) / 2;		var yc1:Number = (points[0].y + points[points.length - 1].y) / 2;		_rt.moveTo(xc1, yc1);		for (var i:Number = 0; i < points.length - 1; i++)	{			var xc:Number = (points[i].x + points[i + 1].x) / 2;			var yc:Number = (points[i].y + points[i + 1].y) / 2;			_rt.curveTo(points[i].x, points[i].y, xc, yc);		}		_rt.curveTo(points[i]._x, points[i]._y, xc1, yc1);		_rt.endFill();	}	private function getCntrl(startPoint:Point,endPoint:Point):Point{		return new Point((startPoint._x + endPoint._x)/2,(startPoint._y + endPoint._y)/2);	}}