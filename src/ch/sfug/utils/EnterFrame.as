import ch.sfug.utils.mc.MCManger;/** * @author loop */class ch.sfug.utils.EnterFrame {	private static var f:Array;	private static var mc:MovieClip;	/**	 * adds a function call to the enterframe loop	 */	public static function addFunction( func:Function, obj:Object ):Void {		init();		f.unshift( [ func, obj ] );		if( f.length == 1 ) {			mc.onEnterFrame = update;		}	}	/**	 * removes a function call from the enterframe loop	 */	public static function removeFunction( func:Function, obj:Object ):Void {		var l:Number = f.length;		while( ( f[--l][1] != obj || f[l][0] != func ) && l > -1 );		if( l > -1 ) f.splice( l, 1 );		if( f.length == 0 ) delete mc.onEnterFrame;	}	/**	 * inits the enterframe	 */	private static function init(  ):Void {		if( f == undefined ) {			f = new Array();			mc = MCManger.getMC( "enterframe" );		}	}	/**	 * updates/calls the added functions	 */	private static function update(  ):Void {		var c = f;		var i:Number = c.length;		while( i-- ) {			c[ i ][ 0 ].apply( c[ i ][ 1 ] );		}	}}