import net.manaca.ui.controls.esse.EsseUIComponent;import net.manaca.lang.event.Event;import net.manaca.ui.controls.ColorPicker;[IconFile("icon/ColorPicker.png")]/** * 在用户选择一个颜色或者更改颜色时 */[Event("change")]/** * MNCColorPicker 组件 * @author Wersling * @version 1.0, 2006-5-29 */class net.manaca.ui.controls.esse.MNCColorPicker extends EsseUIComponent{	private var className : String =  "net.manaca.ui.controls.esse.MNCColorPicker";	private var _componentName:String = "MNCColorPicker";	private var _component:ColorPicker;	private var _createFun:Function = ColorPicker;	private var _selectedColor : Color;	 /**	  * 构造 MNCColorPicker	  * @param 无	  */	 public function MNCColorPicker() {	 	super();	 }	 private function init():Void{		super.init();		selectedColor = _selectedColor;		this.UpdateSkin();		this.addListener(Event.CHANGE);	}	/**	 * 关闭颜色列表	 */	public function close():Void{		_component.close();	}		/**	 * 打开颜色列表	 */	public function open():Void{		_component.open();	}		/**	 * 获取和设置数据源，此数据源支持所有{@see net.manaca.ui.controls.esse.IListDataProvider}方法	 * @summary 获取和设置数据源	 * @example	 * 	<li>添加一项：myMNCColorPicker.dataProvider.addItem(0xFF0000)</li>	 * 	<li>删除所有颜色：myMNCColorPicker.dataProvider.removeAll()</li>	 * @param  value:Object - 数据源	 * @return Object 	 */	public function set dataProvider(value:Object) :Void{		_component.dataProvider = value;	}	public function get dataProvider() :Object{		return _component.dataProvider;	}		/**	 * 获取和设置选择的颜色值	 * @param  value:Color - 	 * @return Color 	 */	[Inspectable(name="selectedColor",type=Color,defaultValue="#000000" )]	public function set selectedColor(value:Color) :Void{		_selectedColor = value;		_component.selectedColor = Number(_selectedColor);	}	public function get selectedColor() :Color{		return _selectedColor;	}}