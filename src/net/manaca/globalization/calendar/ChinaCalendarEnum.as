	/**
	 * 某年的第n个节气为几日(从0小寒起算)
	 */
	public static function sTerm(y,n):Number {
		var offDate = new Date( ( 31556925974.7*(y-1900) + SOLAR_TERM_LIST[n]*60000  ) + Date.UTC(1900,0,6,2,5) );
		return(offDate.getUTCDate());
	}
	//传入 offset 传回干支, 0=甲子
