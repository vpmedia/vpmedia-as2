	/**
	 * 传回农历 y年的总天数
	 * @param y 农历年
	 */
	public static function lYearDays(y):Number
	{
		var i, sum = 348;
		for(i=0x8000; i>0x8; i>>=1) sum += (YEARS_LIST[y-1900] & i)? 1: 0;
		return(sum+leapDays(y));
	}
	
	/**
	 * 传回农历 y年闰月的天数
	 * @param y 农历年
	 */
	public static function leapDays(y):Number {
		if(leapMonth(y))  return((YEARS_LIST[y-1900] & 0x10000)? 30: 29);
		else return(0);
	}
	
	/**
	 * 传回农历 y年闰哪个月 1-12 , 没闰传回 0
	 * @param y 农历年
	 */
	public static function leapMonth(y):Number {
		return(YEARS_LIST[y-1900] & 0xf);
	}
	
	/**
	 * 传回农历 y年m月的总天数
	 * @param y 农历年
	 * @param m 农历月
	 */
	public static function monthDays(y,m):Number {
		return((YEARS_LIST[y-1900] & (0x10000>>m))? 30: 29 );
	}
	
	/**
	 * 传入 offset 传回干,0=甲
